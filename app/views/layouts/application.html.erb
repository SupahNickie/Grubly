<!DOCTYPE html>
<html>

<%= render 'layouts/header' %>

<body>
<% flash.each do |key, value| %>
  <div>
    <%= value %>
  </div>
<% end %>

<% if current_user %>
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %><br>
<% else %>
  <%= link_to 'Sign In', new_user_session_path %><br>
  <%= link_to 'Sign Up', new_user_registration_path %><br>
  <%= link_to "Login with Twitter", user_omniauth_authorize_path(:twitter) %><br>
<% end %>
<br>
<br>
<%= link_to "Restaurants", restaurants_path %><br>

<% if current_user %>
  <% @user = current_user.id %>
  <%= link_to 'My Orders', user_past_orders_path(@user) %>
<% end %>

<div class="container">

  <%= yield %>

</div>

</body>
</html>
