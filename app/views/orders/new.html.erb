<h1><%= "#{@restaurant.name}"%></h1>

<table>
   <thead>
     <tr>
       <th>Dish name</th>
       <th>Price</th>
       <th>Description</th>
       <th>Subcategory</th>
       <th>Inventory</th>
       <th></th>
       <th></th>
       <th></th>
     </tr>
   </thead>

   <tbody>
     <% @items.each do |item| %>
       <tr>
         <td><%= item.dish_name %></td>
         <td><%= "#{item.dollars}.#{item.cents}" %></td>
         <td><%= item.description %></td>
         <td><%= item.subcategory %></td>
         <td><%= item.inventory %></td>
         <td><%= link_to 'Details', restaurant_item_path(@restaurant, item) %></td>
         <% if current_user && policy(item).update? %>
           <td><%= link_to 'Edit', edit_restaurant_item_path(@restaurant, item) %></td>
         <% end %>
         <% if current_user && policy(item).destroy? %>
           <td><%= link_to 'Destroy', restaurant_item_path(@restaurant, item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>
       </tr>
     <% end %>
   </tbody>
 </table>

 <br>
 <% if current_user && policy(@restaurant).item_create? %>
   <%= link_to 'New Item', new_restaurant_item_path(@restaurant) %><br><br>
 <% end %>

<%= render 'form' %>

<%= link_to 'Cancel', restaurant_path(@restaurant) %>
