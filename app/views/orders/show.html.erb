<p id="notice"><%= notice %></p>

<p>
  <strong>Order Number:</strong>
  <%= @order.id %>
</p>

<p>
  <strong>Different Items:</strong>
  <%= @order.items.count %>
</p>

<p>
  <strong>Special Notes:</strong>
  <%= @order.note %>
</p>

<table>
  <thead>
    <tr>
      <th>Dish name</th>
      <th>Price</th>

    </tr>
  </thead>



<!-- DYLAN - here we need to use the user.order.items_ordered.items -->
  <tbody>
    <% @order.ordered_items.items.each do |item| %>
      <tr>
        <td><%= item.dish_name %></td>
        <td><%= "#{item.dollars}.#{item.cents}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Edit', edit_order_path(@order) %> |
